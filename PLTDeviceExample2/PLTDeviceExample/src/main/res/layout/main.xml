<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="4pt"
        android:layout_marginLeft="4pt"
        android:layout_marginRight="4pt"
        android:id="@+id/relative">

        <LinearLayout
            android:id="@+id/tapsLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2pt"
            android:orientation="horizontal"
            android:layout_centerInParent="true">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pedometerLinearLayout"
            android:layout_below="@id/tapsLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2pt"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/freeFallLinearLayout"
            android:layout_below="@id/pedometerLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2pt"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/magnetometerCalLinearLayout"
            android:layout_below="@id/freeFallLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2pt"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/gyroscopeCalLinearLayout"
            android:layout_below="@id/magnetometerCalLinearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2pt"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Username:"
            android:id="@+id/textView"
            android:layout_above="@+id/tapsLinearLayout"
            android:layout_alignLeft="@+id/username_textbox" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username_textbox"
            android:layout_below="@+id/textView"
            android:text="Jenny"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Password:"
            android:id="@+id/textView2"
            android:layout_below="@+id/username_textbox"
            android:layout_alignLeft="@+id/username_textbox" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password_textbox"
            android:layout_below="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignRight="@+id/username_textbox"
            android:text="swagger" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:id="@+id/rememberme_checkbox"
            android:checked="true"
            android:layout_below="@+id/password_textbox"
            android:layout_alignLeft="@+id/password_textbox"
            android:layout_alignRight="@+id/password_textbox" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/login_button"
            android:layout_below="@+id/rememberme_checkbox"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User"
            android:id="@+id/new_user_button"
            android:layout_below="@+id/login_button"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/logo"
            android:layout_marginTop="33dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/error_message_field"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#F80000"
            android:text="Error: Incorrect login username or password."
            android:textAlignment="center"
            android:textSize="20dp"
            android:textIsSelectable="false" />

    </RelativeLayout>
</LinearLayout>
